open time

tag time_unit(i32) {
  second,
  minute,
  hour
}
pub class test {
  pub fn sleep(t: time_unit) {
    val end_time = time.now + time.val * match time.tag {
      == .second { 1000 }
      == .minute { 60000 }
      == .hour { 3600000 }
    }
    while time.now > end_time;
  }
}


fn main() {
  test.sleep(60: second)
  test.sleep(minute(1))
  test.sleep(0.017 as hour)
}

